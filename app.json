name: Build iOS IPA

on:
  push:
    branches:
      - master  # usa il tuo branch principale, se Ã¨ master

jobs:
  build-ios:
    runs-on: ubuntu-latest
    env:
      EXPO_TOKEN: ${{ secrets.EXPO_TOKEN }}  # token Expo come secret

    steps:
      # 1. Checkout del codice
      - uses: actions/checkout@v3

      # 2. Setup Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 20

      # 3. Installazione EAS CLI
      - name: Install EAS CLI
        run: npm install -g eas-cli

      # 4. Installazione dipendenze del progetto
      - name: Install dependencies
        run: npm install

      # 5. Build iOS Development Client
      - name: Build iOS Development Client
        run: eas build --platform ios --profile development --non-interactive

      # 6. Salvataggio IPA come artifact
      - name: Upload IPA as Artifact
        uses: actions/upload-artifact@v4
        with:
          name: LifeCounters-IPA
          path: '**/*.ipa'
